<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editTextDivide1"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit1_jako"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/editTextMultiply1"
        app:layout_constraintTop_toBottomOf="@+id/editTextMultiply1" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDivide1"
        app:layout_constraintStart_toStartOf="@+id/textView14" />

    <EditText
        android:id="@+id/editTextDivide2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit2_jako"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDivide1"
        app:layout_constraintStart_toStartOf="@+id/editTextMultiply2" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateResult"
        android:text="@string/button_calculate"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDivide1"
        app:layout_constraintStart_toStartOf="@+id/buttonMultiply" />

    <TextView
        android:id="@+id/textViewDivide"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDivide1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewMultiply" />

    <EditText
        android:id="@+id/editTextMultiply1"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit1_kerto"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/editTextDiff1"
        app:layout_constraintTop_toBottomOf="@+id/editTextDiff1" />

    <EditText
        android:id="@+id/editTextDiff1"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit1_miinus"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/editTextSum1"
        app:layout_constraintTop_toBottomOf="@+id/editTextSum1" />

    <EditText
        android:id="@+id/editTextSum1"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit1_plussa"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateResult"
        android:text="@string/button_calculate"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextSum1"
        app:layout_constraintEnd_toStartOf="@+id/textViewSum"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editTextSum2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextSum1"
        app:layout_constraintEnd_toStartOf="@+id/editTextSum2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editTextSum1" />

    <EditText
        android:id="@+id/editTextSum2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit2_plussa"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextSum1"
        app:layout_constraintEnd_toStartOf="@+id/buttonSum"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewSum"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextSum1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDiff1"
        app:layout_constraintStart_toStartOf="@+id/textView" />

    <Button
        android:id="@+id/buttonDiff"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:onClick="calculateResult"
        android:text="@string/button_calculate"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDiff1"
        app:layout_constraintStart_toStartOf="@+id/buttonSum" />

    <EditText
        android:id="@+id/editTextDiff2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit2_miinus"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDiff1"
        app:layout_constraintStart_toStartOf="@+id/editTextSum2" />

    <TextView
        android:id="@+id/textViewDiff"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDiff1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewSum" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextMultiply1"
        app:layout_constraintStart_toStartOf="@+id/textView12" />

    <EditText
        android:id="@+id/editTextMultiply2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/edit2_kerto"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextMultiply1"
        app:layout_constraintStart_toStartOf="@+id/editTextDiff2" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateResult"
        android:text="@string/button_calculate"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextMultiply1"
        app:layout_constraintStart_toStartOf="@+id/buttonDiff" />

    <TextView
        android:id="@+id/textViewMultiply"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextMultiply1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewDiff" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="emptyAll"
        android:text="@string/button_tyhjenna"
        app:layout_constraintEnd_toStartOf="@+id/buttonLog"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDivide1" />

    <Button
        android:id="@+id/buttonLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="showLog"
        android:text="@string/button_logi"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonClear" />

</android.support.constraint.ConstraintLayout>